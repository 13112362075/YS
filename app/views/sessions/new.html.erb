<h1 class="Login">登陆界面</h1> 
            <div class="row">
                 <div class="col-md-6 col-md-offset-3">
                       <%=  form_for(:session,url: login_path) do |f| %> 
                        <%= f.label :用户名  %>  
                        <%= f.text_field :account  %>  
                        <%=  f.label :密码 %> 
                        <%=  f.password_field :password %> 
                        <br>
                        <%=  f.submit  "登陆", class: "btn btn-primary" %> 
                       <% end %>
                 </div>
            </div>


