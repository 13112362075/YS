

<!-- Modal -->
<div class="modal fade" id="assetstatusModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4>资产状态表</h4>
          <h4  hidden="hidden" id="assetstatusid" class="modal-title"  ></h4> 
                  <h4  hidden="hidden" id="AssetstatusModalid" class="modal-title"  > <%= id%> </h4> 
        </div>
        <div class="modal-body"> 
  
          <table class="table table-bordered">
            <thead>
            <tr>
              <th>资产状态编码</th>
              <th>资产状态</th> 
            </tr>
            </thead>
            <tbody>
              <% @assetstatus.each do |assetstatus| %>
              <tr class="select_assetstatus" data-assetstatus_id="<%= assetstatus.id %>" >
                <td><%= assetstatus.Assetstatuscode %></td>
                <td><%= assetstatus.Name %></td> 
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
  
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
          <button id="chooseassetstatus" type="button" class="btn btn-default" data-dismiss="modal">确定</button>
        </div> 
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
  
  
  
  
       <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
      <script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
      <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
  
  
  <script>
  $('tr.select_assetstatus').click(function(e){ 
      $("tr.select_assetstatus").css("backgroundColor","white");
      this.style.backgroundColor = "#357ebd"
      console.log(this.dataset.assetstatus_id) 
      $("#assetstatusid").text(this.dataset.assetstatus_id);
  
  }) 
  
  </script>
  
