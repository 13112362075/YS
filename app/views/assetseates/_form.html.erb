    <div class="field" >
    <label class="layui-form-label"   for="assetseate_创建人">创建人</label>
    <div class="layui-input-block"> <input     class="layui-input locked "    type="text" name="assetseate[Creator]" id="assetseate_Creator"   value=<%= @assetseate.Creator%>  ></div>
  </div> 

    <div class="field" >
    <label class="layui-form-label"   for="assetseate_创建日期">创建日期</label>
    <div class="layui-input-block"> <input     class="layui-input  locked"     type="text" name="assetseate[CreateDate]" id="assetseate_CreateDate"   value=<%= @assetseate.CreateDate%>  ></div>
  </div> 

    <div class="field" >
    <label class="layui-form-label"   for="assetseate_审核人">审核人</label>
    <div class="layui-input-block"> <input     class="layui-input locked "    type="text" name="assetseate[Approver]" id="assetseate_Approver"   value=<%= @assetseate.Approver%>  ></div>
  </div> 

      <div class="field" >
    <label class="layui-form-label"   for="assetseate_审核日期">审核日期</label>
    <div class="layui-input-block"> <input     class="layui-input locked"    type="text" name="assetseate[ApproverDate]" id="assetseate_ApproverDate"   value=<%= @assetseate.ApproverDate%>  ></div>
  </div> 
  

   <div class="layui-btn-group " style="margin:10px;0px;">
      <a> <input class="layui-btn  " type="submit" name="commit" value="保存" data-disable-with="保存"></a>
      <a rel="nofollow"><button onclick="Update_Status(<%= @assetseate.id%>,'审核')" type="button"
          class="layui-btn  ">审核</button></a>
      <a rel="nofollow"><button onclick="Update_Status(<%= @assetseate.id%>,'反审核')" type="button"
          class="layui-btn  ">反审核</button></a>
       

      <a data-url="/assetseates" data-id="assetseates" data-title="使用状态列表" class="linkActive"><button type="button"
          class="layui-btn">列表</button></a>

    </div>
<% end %>




<script type="text/javascript">
   $(document).ready(function () { 
     $(".locked").prop('disabled', 'disabled');
    $(".locked").css('background-color', '#F5F5F5');
   })



 
      function Update_Status(id, fbillstatus) {
        var id_list = new Array();
        id_list[0] = id;
        $.ajax({
          type: "post",
          url: "/assetseates_Update_fbillstatus",
          data: {
            "id": id_list,
            "fbillstatus": fbillstatus
          },
          success: function (res) {
              alert(res.message);
            if (res.code == 200) { 
              location.reload();
            }
          }
        });
      } 

</script>

    <script>
      $(document).ready(function () {
        if ($("#assetseate_fbillstatus").val() == '已审核') {
          $("input").prop('disabled', 'disabled');
          $("select").prop('disabled', 'disabled');
          $("input").css('background-color', '#F5F5F5');
          $("select").css('background-color', '#F5F5F5'); 
        }
      });
    </script>