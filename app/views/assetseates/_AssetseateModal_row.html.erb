

<!-- Modal -->
<div class="modal fade" id="assetseateModal_row" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h4>资产位置表</h4>
        <h4 hidden="hidden" id="assetseateid" class="modal-title"  ></h4>
        <h4 hidden="hidden" id="AssetseateModalid" class="modal-title"  > <%= id%> </h4> 
      </div>
      <div class="modal-body"> 

        <table class="table table-bordered">
          <thead>
          <tr>
            <th>资产位置编码</th>
            <th>资产位置</th> 
          </tr>
          </thead>
          <tbody>
            <% @assetseate.each do |assetseate| %>
            <tr class="select select_assetseate" data-assetseate_id="<%= assetseate.id %>" >
              <td><%= assetseate.Assetseatecode %></td>
              <td><%= assetseate.Name %></td> 
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
        <button id="chooseassetseate" type="button" class="btn btn-default" data-dismiss="modal">确定</button>
      </div> 
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->




 

<script>
$('tr.select_assetseate').click(function(e){ 
    $("tr.select_assetseate").css("backgroundColor","white");
    this.style.backgroundColor = "#357ebd"
    console.log(this.dataset.assetseate_id) 
    $("#assetseateid").text(this.dataset.assetseate_id); 
}) 

</script>

<script> 
