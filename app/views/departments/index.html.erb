<p id="notice"><%= notice %></p>

<h1>部门表</h1>

<table>
  <thead>
    <tr>
      <th>部门编码</th>
      <th>部门名称</th>
      <th>所属组织</th>
      <th>描述</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.departmentcode %></td>
        <td><%= department.departmentname %></td>
        <td><%= department.organize_id %></td>
        <td><%= department.description %></td>
        <td><%= link_to '查看', department %></td>
        <td><%= link_to '编辑', edit_department_path(department) %></td>
        <td><%= link_to '删除', department, method: :delete, data: { confirm: '你确定要删除吗' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

