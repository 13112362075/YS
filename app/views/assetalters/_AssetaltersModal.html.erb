

<!-- Modal -->
<div class="modal fade" id="assetalterModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h4> 变更记录</h4>
        <h4 hidden="hidden" id="assetalterid" class="modal-title"  ></h4> 
        <h4  hidden="hidden" id="assetalterModalid" class="modal-title"  > <%= id%> </h4>  
      </div>
      <div class="modal-body">  
       
        <table id="table_assetaltermodal" class="table table-bordered">
          <thead>
          <tr>
            <th>单据编号</th>
            <th>审核日期</th> 
          </tr>
          </thead>
          <tbody>
            <% @assetalter.each do |assetalter| %>
            <tr class="select selectassetalter" data-assetalter_id="<%= assetalter.id %>" >
              <td><%= assetalter.Fbillno %></td>
              <td><%= assetalter.Approverdate %></td>  
            </tr>
            <% end %>
          </tbody>
        </table>
      </div> 
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
        <button id="show" type="button" class="btn btn-default" data-dismiss="modal">查看</button>
      </div> 
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


 

<script>
$('tr.selectassetalter').click(function(e){ 
    $("tr.selectassetalter").css("backgroundColor","white");
    this.style.backgroundColor = "#357ebd"
    $("#assetalterid").text(this.dataset.assetalter_id);
}) 

</script>

<script> 
$('#show').click(function(e){     
  window.location ="/assetalters/"+$("#assetalterid").text()+"/edit" 
})  



$('tr.selectassetalter').dblclick(function(e){    
 window.location ="/assetalters/"+$("#assetalterid").text()+"/edit" 
})  
</script>
 


 