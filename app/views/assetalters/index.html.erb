 <script type="text/javascript">
   // 获取选中的复选框项，保存为一个数组
   function getCheckedCheckbox(checkboxClassName) {
     var array = new Array();
     var j = 0;
     var selectedItems = document.getElementsByClassName(checkboxClassName);
     for (var i = 1; i < selectedItems.length; i++) {
       if (selectedItems[i].checked == true) {
         array[j] = selectedItems[i].value;
         j++;
       }
     }
     return array;
   }

   function getCheckedCheckbox_update() {
     
     var table = layui.table;
     var checkStatus = table.checkStatus('assetalters');
     if (checkStatus.data.length > 1) {
       alert("选择了多行数据，请选择1行！");
       document.getElementById("a_update").href = "";
       return false;
     } else if (checkStatus.data.length == 0) {
       alert("没有选择数据，请重新选择！");
       document.getElementById("a_update").href = "";
       document.getElementById("a_update").dataset.url = "";
       return false;
     }
     var asset_pickings_id = "/assetalters/" + checkStatus.data[0].id + "/edit";
     document.getElementById("a_update").dataset.url = asset_pickings_id
 
   }
 </script>


 <script>
   function model_delete(path) {
     if (!confirm('你确定要删除吗？')) {
       return false
     }
     var items = new Array();
     items = getCheckedCheckbox("awsui-checkbox");
     var table = layui.table;
     var checkStatus = table.checkStatus('assetalters').data;
     for (var i = 0; i < checkStatus.length; i++) {
       items[i] = checkStatus[i].id
     }
     if(items.length==0)
     {
       alert("请选择单据！");
       return;
     }
     var resturl = path;
     $.ajax({
       type: "post",
       url: resturl,
       data: {
         "assetaltersid": items
       },
       success: function (res) {
         if (res.code == 200) {
           alert(res.message);
           location.reload();
         }
         else 
         {
           alert(res.message);
         }
       } 
     });
   }

   function Refresh() {
     location.reload([true])
   }

   $(document).ready(function () {
     $("#progress").hide();
   });
 </script>