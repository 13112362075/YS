<p id="notice"><%= notice %></p>

<h1>用户表</h1>

<table  border="1">
  <thead>
    <tr>
      <th>用户名</th>
      <th>密码</th>
      <th>姓名</th>
      <th>地址</th>
      <th>邮箱</th>
      <th>电话</th>
      <th>性别</th>
      <th>角色</th>
      <th>所属部门</th>
      <th>所属组织</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.account %></td>
        <td><%= user.password %></td>
        <td><%= user.name %></td>
        <td><%= user.address %></td>
        <td><%= user.email %></td>
        <td><%= user.telephone %></td>
        <td><%= user.sex %></td>
        <td><%= user.role %></td>
        <td><%= user.department_id  %></td>
        <td><%= user.orgainize_id %></td>
        <td><%= link_to '查看', user  , data: { confirm: 'Are you sure?' }  %></td>
        <td><%= link_to '编辑', edit_user_path(user) %></td>
        <td><%= link_to '删除', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新增用户', new_user_path %>
