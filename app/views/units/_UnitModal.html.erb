

<!-- Modal -->
<div class="modal fade" id="unitModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
          <h4>计量单位表</h4>
        <h4  hidden="hidden" id="unitid" class="modal-title"  ></h4> 
                <h4  hidden="hidden" id="UnitModalid" class="modal-title"  > <%= id%> </h4> 
      </div>
      <div class="modal-body"> 

        <table class="table table-bordered">
          <thead>
          <tr>
            <th>单位编码</th>
            <th>单位名称</th> 
          </tr>
          </thead>
          <tbody>
            <% @unit.each do |unit| %>
            <tr class="select_unit" data-user_id="<%= unit.id %>" >
              <td><%= unit.Unitcode %></td>
              <td><%= unit.name %></td> 
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
        <button id="chooseunit" type="button" class="btn btn-default" data-dismiss="modal">确定</button>
      </div> 
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->



 

<script>
$('tr.select_unit').click(function(e){ 
    $("tr.select_unit").css("backgroundColor","white");
    this.style.backgroundColor = "#357ebd" 
    $("#unitid").text(this.dataset.user_id);

}) 

</script>

<script> 
